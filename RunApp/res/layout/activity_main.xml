<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rImage="http://schemas.android.com/apk/res/com.android.ivymobi.runapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.android.ivymobi.runapp.widget.SlidingGroup
        android:id="@+id/slidingGroup1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        rImage:defaultPostion="1"
        rImage:offset="50dp" >

        <include layout="@layout/fragment_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <include
                android:id="@+id/titleBar"
                layout="@layout/activity_titlebar" />

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                 android:orientation="vertical"
                android:layout_height="match_parent" >
            </LinearLayout>
        </LinearLayout>
    </com.android.ivymobi.runapp.widget.SlidingGroup>

</LinearLayout>